<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="78"
        android:background="@drawable/pannel_general_info"
        android:orientation="vertical" >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              android:gravity="center"
              android:shadowColor="#7f000000"
              android:shadowDx="2"
              android:shadowDy="2"
              android:shadowRadius="1"
              android:text="@string/business_title"
              android:textColor="@android:color/white"
              android:textSize="26sp"
              android:textStyle="bold" />

    </LinearLayout>
	<!--pannel  营业额- 业务-->
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="667"
       
        android:orientation="vertical" />
	<!--pannel time  -->

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:layout_weight="66"
	    android:background="@drawable/pannel_general_info"
	    android:orientation="vertical" >
          
      </LinearLayout>
	<!--button  -->
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="105" >

          <Button
              android:layout_width="115dp"
              android:layout_height="43dp"
              android:layout_centerInParent="true"
              android:layout_gravity="center"
              android:layout_marginLeft="10dp"
              android:background="@drawable/main_button_search"
              android:text="@string/business_search_button_txt"
              android:textColor="@color/white" />

	 </RelativeLayout>
	    
	    <!-- bottom -->

	    <LinearLayout
	      android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="59"
	      android:orientation="vertical" >

	     <ImageView
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:background="@drawable/pannel_general_info"
	         android:orientation="vertical"
	         android:scaleType="fitXY" />

	    </LinearLayout>
	
       
</LinearLayout>
