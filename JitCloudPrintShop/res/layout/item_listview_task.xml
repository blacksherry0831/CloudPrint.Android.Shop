<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8f66ccff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
		                    android:id="@+id/textview_list_item_text"
		                    android:layout_width="match_parent"
		                    android:layout_height="wrap_content"
		                 
		                    android:text="s\n\n\n\n\ddddddddddddddn\nssss"
		                    android:textColor="@android:color/white"
		                    android:textSize="16sp"
		                    android:textStyle="bold" >

	    </TextView>

	    

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/textView_pages"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="页数："
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/textView_pages"
            android:ems="10"
            android:inputType="number"
            android:singleLine="true" />

        <Button
            android:id="@+id/button_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/editText1"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentRight="true"
            android:background="@drawable/phone"
            android:gravity="center"
            android:text="电话联系"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textview_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/editText1"
            android:gravity="center"
            android:text="0.0￥"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_msg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/button_call"
            android:background="@drawable/msg"
            android:text="短信"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>

